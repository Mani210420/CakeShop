<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Cake?.ImageThumbnailUrl" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Cake?.Price.ToString("c")</h3>
            <h3>
                <a href="/cake/details/@Cake?.CakeId">@Cake?.Name</a>
            </h3>
            <p>@Cake?.ShortDescription</p>
        </div>
    </div>
</div>