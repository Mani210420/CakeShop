@page "/searchblazor"
@rendermode InteractiveServer

<h3>Search Cakes</h3>

<div class="text-center bg-blue-100">
    <input class="border-4 w-1/3 rounded m-6 p-6 h-8 border-blue-100" @bind-value="SearchText"
    @bind-value:event ="oninput" placeholder="search by cake name" @onkeyup="Search" />
</div>

@if(!FilteredCakes.Any())
{
    <p>Nothing to show...</p>
    @if(SearchText.Length <3)
    {
        <p>Enter 3 charectors atleast...</p>
    }
}
else
{
    <div class="p-2 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3">
        @foreach(var cake in FilteredCakes)
        {
            <CakeCard Cake=@cake></CakeCard>
        }
    </div>
}